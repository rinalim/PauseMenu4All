<?xml version="1.0" encoding="UTF-8"?>
<game romname="crater" gamename="Crater Raider" numPlayers="2" alternating="1" mirrored="1" usesService="0" tilt="1" cocktail="0">
	<miscDetails>
The shield button is the thumb button on the joystick. 
	</miscDetails>
	<player number="1" numButtons="3">
		<controls>
			<control name="2-way Joystick (Vertical)">
				<constant name="vjoy2way"/>
				<button name="P1_BUTTON1"/>
				<button name="P1_BUTTON2"/>
			</control>
			<control name="Spinner">
				<constant name="dial"/>
			</control>
		</controls>
	<labels>
			<label name="P1_BUTTON1" value="Fire (Trigger)"/>
			<label name="P1_BUTTON2" value="Shield"/>
			<label name="P1_BUTTON3" value="??"/>
			<label name="P1_JOYSTICK_DOWN" value="Reverse"/>
			<label name="P1_JOYSTICK_UP" value="Forward"/>
			<label name="P1_DIAL" value="Turn Left"/>
			<label name="P1_DIAL_EXT" value="Turn Right"/>
		</labels>
	</player>
</game>
