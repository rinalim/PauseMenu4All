			<label name="P1_BUTTON3" value="FIGHT!"/>
			<label name="P1_TRACKBALL_X" value="Left"/>
			<label name="P1_TRACKBALL_X_EXT" value="Right"/>
			<label name="P1_TRACKBALL_Y" value="Up"/>
			<label name="P1_TRACKBALL_Y_EXT" value="Down"/>
		</labels>
	</player>
</game>
